package com.mugwumps.stackapp;

import java.util.*;
import android.R.array;
import android.R.string;


public class BoundedStack2 implements stack{
	
	//declares a stack with a limit of 3
	private int [] stack; 
	private int size = 0;
	public static String InfoMessage;
	
	//constructor
	public BoundedStack2(int Size){
		stack = new int[Size];
	}

	@Override
	public void push(int item) {
		// TODO Auto-generated method stub
		if (size == stack.length){
			InfoMessage = "Stack is full";
			throw new IllegalStateException("Stack is full");
		}
		if (item > 10){
			InfoMessage = "Use only single digits";
			throw new IllegalStateException("Use only single digits");
		}
		stack[size++] = item;
	}

	@Override
	public int pop() {
		// TODO Auto-generated method stub
		return stack[--size];
	}

	@Override
	public int[] view() {
		// TODO Auto-generated method stub
		return stack;
	}

	@Override
	public int size() {
		// TODO Auto-generated method stub
		return size;
	}

	@Override
	public boolean isEmpty() {
		// TODO Auto-generated method stub
		return size == 0;
	}


}
